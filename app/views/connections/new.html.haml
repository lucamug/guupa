%table{:style => "padding: 30px"}
  %tr
    %td{:width => "40%", :style => "border-right: 1px dashed orange"}
      %h2= t :existing_user
      = form_for(@connection) do |f|
        = render "layouts/error_messages", :item => @connection, :error_message => t(:the_user_cannot_log_in)
        %table
          %tr
            %td{:style => "padding-top: 10px"}= f.label :email
            %td= f.text_field :email
          %tr
            %td{:style => "padding-top: 10px"}= f.label :password
            %td= f.password_field :password
          %tr
            %td{:style => "padding-top: 10px", :colspan => 2} #{f.label :remember_me} #{f.check_box :remember_me}
        %p{:class => "button"}
          = submit_tag(value = t(:sign_in))
        %p{:style => "font-size: 90%"}
          = link_to t(:forgot_password), new_password_reset_path
    %td{:style => "padding-left: 50px"}
      %h2= t :new_user
      = form_for(@user) do |f|
        = render "layouts/error_messages", :item => @user, :error_message => t(:the_user_has_not_been_created)
        %table
          %tr
            %td{:style => "padding-top: 10px"}= f.label :username
            %td= f.text_field :username
          %tr
            %td{:style => "padding-top: 10px"}= f.label :email
            %td= f.text_field :email
          %tr
            %td{:style => "padding-top: 10px"}= f.label t :choose_a_password
            %td= f.password_field :password
        %p{:class => "button"}
          = f.submit(value = t(:create_a_new_user_and_sign_in))
        %p{:style => "font-size: 90%"}
          = t(:registering_as_new_user_you_accept_the)
          = link_to( t(:privacy_policy), privacy_path)

