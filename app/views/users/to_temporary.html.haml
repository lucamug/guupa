.two-col
  .header
    #left_column
      .inner{:style => "padding-left: 40px"}
        %h2= t(:add_email_and_became_a_temporary_user)
        %div{:style => "margin:100px 120px; text-align: center"}
          = form_for @user, :url => to_temporary_update_path(params[:id]) do |f|
            = render "layouts/error_messages", :item => @user
            %table
              %tr
                %td{:style => "text-align: right; padding-top: 4px"}
                  = f.label :temporary_email
                %td
                  = f.text_field :temporary_email
            .actions= f.submit t(:add_email_and_became_a_temporary_user)
    #right_column
      = render :partial => "users/user_column", :locals => {:user => current_user_obj}          
    
